# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Service Keys
GROQ_API_KEY=your_groq_api_key
HF_TOKEN=your_huggingface_token
COHERE_API_KEY=your_cohere_api_key
GOOGLE_API_KEY=your_google_api_key
OPENROUTER_API_KEY=your_openrouter_api_key


# Model Configuration
# Router
LLM_ROUTER_MODEL=gemini/gemini-2.5-flash-lite
LLM_ROUTER_FALLBACKS=groq/llama-3.3-70b-versatile,openrouter/google/gemini-2.0-flash-exp:free

# RAG Service
RAG_MODEL=gemini/gemini-2.5-flash-lite
RAG_FALLBACKS=groq/llama-3.3-70b-versatile,openrouter/google/gemini-2.0-flash-exp:free

# Query Validator
QUERY_VALIDATOR_MODEL=gemini/gemini-2.5-flash-lite
QUERY_VALIDATOR_FALLBACKS=groq/llama-3.3-70b-versatile,openrouter/google/gemini-2.0-flash-exp:free

# Intent Classifier
INTENT_CLASSIFIER_MODEL=gemini/gemini-2.5-flash-lite
INTENT_CLASSIFIER_FALLBACKS=groq/llama-3.3-70b-versatile,openrouter/google/gemini-2.0-flash-exp:free

# RAGAS Evaluator
RAGAS_EVALUATOR_MODEL=gemini/gemini-2.5-flash-lite


# API
NEXT_PUBLIC_API_URL=/api/py

# Production URL
NEXT_PUBLIC_URL=https://concierge-ai-tax.vercel.app/

# Feature flags 
USE_LLM_ROUTER=true
USE_HYBRID_SEARCH=true
USE_RERANKING=true
ENABLE_CHUNK_EXPANSION=true
USE_DYNAMIC_WEIGHTS=true

# Retreval Configuration

# How many documents to retrieve initially
RETRIEVAL_K=10

# Hybrid search weights 
BM25_WEIGHT=0.6              
VECTOR_WEIGHT=0.4           

# Reranking configuration
RERANK_TOP_K=30              
RERANK_FINAL_K=4          

# Content size limits
MAX_CONTENT_LENGTH=8000     
ENABLE_SMART_TRUNCATE=true   


# CHUNK EXPANSION (for context continuity)

CHUNK_EXPANSION_WINDOW=1     


# PERFORMANCE

# Confidence thresholds
MIN_CONFIDENCE_THRESHOLD=0.75
ENABLE_SELF_CORRECTION=false  

# Rate limiting
RAGAS_EVAL_DELAY=60          
COHERE_RATE_LIMIT_DELAY=3    

